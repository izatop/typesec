  "devDependencies": {
    "@prettier/plugin-oxc": "^0.0.4",
    "@types/bun": "^1.3.0",
    "@typesec/bootstrap": "workspace:*",
    "oxlint": "^1.23.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3"
  },
  "private": true
}
