{
  "name": "typesec",
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "catalog": {
      "@types/bun": "1.3.5",
      "@types/node": "25.0.3",
      "@typesec/bootstrap": "workspace:*",
      "@typesec/cli": "workspace:*",
      "@typesec/core": "workspace:*",
      "@typesec/gup": "workspace:*",
      "@typesec/serve": "workspace:*",
      "@typesec/the": "workspace:*",
      "@typesec/tracer": "workspace:*",
      "@typesec/unit": "workspace:*",
      "radash": "12.1.1",
      "chalk": "5.6.2",
      "zod": "4.2.1",
      "@commander-js/extra-typings": "14.0.0",
      "commander": "14.0.2",
      "@types/chalk": "2.2.4"
    },
    "catalogs": {
      "build": {
        "@prettier/plugin-oxc": "0.1.3",
        "oxlint": "1.35.0",
        "prettier": "3.7.4",
        "typescript": "5.9.3"
      }
    }
  },
  "scripts": {
    "check": "bun tsc -b packages",
    "check:watch": "bun tsc -b packages -w",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "lint": "oxlint",
    "sync": "bun typesec-sync",
    "up": "bun update -ri --latest"
  },
  "devDependencies": {
    "@types/bun": "catalog:",
    "@prettier/plugin-oxc": "catalog:build",
    "@typesec/bootstrap": "workspace:*",
    "oxlint": "catalog:build",
    "prettier": "catalog:build",
    "typescript": "catalog:build"
  },
  "private": true
}
